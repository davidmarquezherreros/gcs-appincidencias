<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppIncidenciasXF.Login">
    <ContentPage.Content Margin="5,30,5,5">
        <ScrollView>
            <StackLayout Padding="10">
                <Label Text="Inicio sesión" FontSize="20"/>
                <Label Text="Nick" FontSize="15"/>
                <Entry Placeholder="Introduzca su nick" FontSize="15"/>
                <Label Text="Contraseña" FontSize="15"/>
                <Entry Placeholder="Introduzca su contraseña" FontSize="15" IsPassword="true"/>
                <Button Text="Iniciar" Clicked="Handle_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
