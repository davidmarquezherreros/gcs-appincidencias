<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  xmlns:local="clr-namespace:MasterPage;assembly=MasterPage" x:Class="AppIncidenciasXF.MasterPage" 
	>
	<MasterDetailPage.Master>
		<ContentPage BackgroundColor="Gray" Title="Master Page" Icon="menu-icon.png">
			<ScrollView>
				<StackLayout Orientation="Vertical" Margin="5,30,5,5">
					<Label Text="Menu"/>
					<ContentView Padding="10">
						<Image Source="avatar.png" HeightRequest="50" WidthRequest="50"/>
					</ContentView>
					<Button Text="Registro" BackgroundColor="Yellow" Clicked="Handle_Clicked" x:Name="BtnRegistro"></Button>
					<Button Text="Login" BackgroundColor="Yellow" Clicked="Handle_Clicked1" x:Name="BtnLogin"></Button>
					<Button Text="Limpieza" BackgroundColor="Yellow" Clicked="Handle_Clicked2" x:Name="BtnLimpieza"></Button>
					<Button Text="Mantenimiento" BackgroundColor="Yellow" Clicked="Handle_Clicked3" x:Name="BtnMantenimiento"></Button>
					<Button Text="Inventario" BackgroundColor="Yellow" Clicked="Handle_Clicked4" x:Name="BtnInventario"></Button>
					<Button Text="Fichar" BackgroundColor="Yellow" Clicked="Handle_Clicked5" x:Name="BtnFichar"></Button>
					<Button Text="Salir" BackgroundColor="Yellow" Clicked="Handle_Clicked6" x:Name="BtnSalir"></Button>
				</StackLayout>
			</ScrollView>
		</ContentPage>
		
	</MasterDetailPage.Master>
	<MasterDetailPage.Detail>
		<ContentPage>
			<ContentPage.Content>
				<Label Text="TEST"/>
			</ContentPage.Content>
		</ContentPage>
	</MasterDetailPage.Detail>
</MasterDetailPage>
