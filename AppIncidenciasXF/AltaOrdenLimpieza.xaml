<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="AppIncidenciasXF.AltaOrdenLimpieza">
	<ContentPage.Content Margin="5,30,5,5">
		<ScrollView Margin="5,30,5,5">
			<StackLayout >
				<Label Text="Alta orden limpieza" FontSize="25"/>
				<Label Text="Habitacion:" FontSize="15"/>
				<Picker Title="Elige una habitacion" x:Name="pickerhabitaciones">
					<Picker.Items>
						<x:String>Habitacion 1</x:String>
				        <x:String>Habitacion 2</x:String>
				        <x:String>Habitacion 3</x:String>
				        <x:String>Habitacion 4</x:String>
					</Picker.Items>
				</Picker>
				<Label Text="Horario:" FontSize="15"/>
				<DatePicker Format="dd/MM/yyyy" x:Name="fecha"></DatePicker>
				<TimePicker Format="HH:ss" x:Name="hora"></TimePicker>
				<Label Text="Elige al encargado:" FontSize="15"/>
				<Picker Title="Encargado:" x:Name="pickerencargado">
					<Picker.Items>
						<x:String>Encargado 1</x:String>
				        <x:String>Encargado 2</x:String>
				        <x:String>Encargado 3</x:String>
				        <x:String>Encargado 4</x:String>
					</Picker.Items>
				</Picker>
				<Button Text="Crear orden" Clicked="Handle_Clicked"/>
			</StackLayout>
		</ScrollView>
	</ContentPage.Content>
</ContentPage>
